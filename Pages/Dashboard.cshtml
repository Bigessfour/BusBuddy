@page
@model BusBuddy.Pages.DashboardModel
@inject BusBuddy.Services.IBusScheduleHelper BusScheduleHelper
@{
    ViewData["Title"] = "BusBuddy Dashboard";
}

<div class="container">
    <h1>BusBuddy Dashboard</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Bus Schedules</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Route</th>
                                <th>Schedule</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model.Schedules)
                            {
                                <tr>
                                    <td>@schedule.Id</td>
                                    <td>@schedule.RouteName</td>
                                    <td>@BusScheduleHelper.FormatSchedule(schedule)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Add New Schedule</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="AddSchedule">
                        <div class="mb-3">
                            <label asp-for="NewSchedule.RouteName" class="form-label">Route Name</label>
                            <input asp-for="NewSchedule.RouteName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewSchedule.Time" class="form-label">Schedule Time</label>
                            <input asp-for="NewSchedule.Time" class="form-control" type="datetime-local" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Add Schedule</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
